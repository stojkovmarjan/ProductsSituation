<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_enter_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maryan.productssituation.EnterCategory">

    <EditText
        android:id="@+id/txtCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Category"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_enter_category"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_enter_category"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_enter_category" />

    <EditText
        android:id="@+id/txtDescription"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Description"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtCategory"
        app:layout_constraintLeft_toLeftOf="@+id/txtCategory"
        app:layout_constraintRight_toRightOf="@+id/txtCategory" />

    <Button
        android:onClick="Button_Click"
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="@+id/button11"
        app:layout_constraintRight_toLeftOf="@+id/button11"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/button11" />

    <Button
        android:onClick="Button_Click"
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        app:layout_constraintTop_toBottomOf="@+id/txtDescription"
        app:layout_constraintRight_toRightOf="@+id/txtDescription"
        app:layout_constraintBottom_toBottomOf="@+id/activity_enter_category"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
